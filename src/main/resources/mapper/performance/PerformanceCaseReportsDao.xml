    <select id="queryObject" resultType="io.renren.modules.performance.entity.PerformanceCaseReportsEntity" >
        select * from test_performance_case_reports where report_id = #{value}
    </select>

    <select id="queryList" resultType="io.renren.modules.performance.entity.PerformanceCaseReportsEntity" >
        select * from test_performance_case_reports
        <where>
            <if test="caseId != null and caseId.trim() != ''">
                case_id = #{caseId}
            </if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by add_time desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null ">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(1) from test_performance_case_reports
        <where>
            <if test="caseId != null and caseId.trim() != ''">
                case_id = #{caseId}
            </if>
        </where>
    </select>

    <delete id="deleteBatchByCaseIds">
        delete from test_performance_case_reports where case_id in
        <foreach item="caseIds" collection="array" open="(" separator="," close=")">
            #{caseIds}
        </foreach>
    </delete>

    <insert id="save" parameterType="io.renren.modules.performance.entity.PerformanceCaseReportsEntity" useGeneratedKeys="true" keyProperty="reportId">
        insert into test_performance_case_reports
        (
        `case_id`,
        `file_id`,
        `origin_name`,
        `report_name`,
        `file_size`,
        `remark`,
        `add_by`
        )
        values
        (
        #{caseId},
        #{fileId},
        #{originName},
        #{reportName},
        #{fileSize},
        #{remark},
        #{addBy}
        )
    </insert>

    <update id="update" parameterType="io.renren.modules.performance.entity.PerformanceCaseReportsEntity">
        update test_performance_case_reports
        <set>
            <if test="caseId != null">`case_id` = #{caseId}, </if>
            <if test="fileId != null">`file_id` = #{fileId}, </if>
            <if test="originName != null">`origin_name` = #{originName}, </if>
            <if test="reportName != null">`report_name` = #{reportName}, </if>
            <if test="fileSize != null">`file_size` = #{fileSize}, </if>
            <if test="status != null">`status` = #{status}, </if>
            <if test="remark != null">`remark` = #{remark}, </if>
            <if test="updateBy != null">`update_by` = #{updateBy} </if>
        </set>
        where report_id = #{reportId}
    </update>

